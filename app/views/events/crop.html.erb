<h1 class="crop-image">Crop Image</h1>

<div class="row">
  <div class=col-sm-7>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="70"
        aria-valuemin="0" aria-valuemax="100" style="width:50%">
        Step 1/2 Completed 
  </div>
</div>

<div class="row">
  <div class=col-sm-6>
    <%= image_tag @event.image.url(:small), id:"cropbox" %>
  </div>
</div>

<%= form_for [@neighbourhood, @event] do |f| %>
  <% %w[x y w h].each do |attribute| %>
    <%= f.hidden_field "crop_#{attribute}" %><br>
  <% end %>
  <div class="action">
    <%= f.submit "Submit image", class: "btn btn-primary" %>
  </div>
<% end %>