<div class="panel panel-default">
  <div class="panel-heading"> 
    <%= EventComment.find_user(comment.user_id) %> 
  </div>
  <div class="panel-body">
    <dd>
      <%= comment.content %>
    </dd>
    <% if current_user.id === comment.user_id %>
      <dd>
        <%= link_to fa_icon('trash'), event_comment_path(event_id: @event.id, id:comment.id, type: 'event'), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
      </dd>
    <% end %>
  </div>
</div>