<!DOCTYPE html>
<html>
  <header>
    <title>Neighbours</title>
      <%= csrf_meta_tags %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag params[:controller], 'data-turbolinks-track': 'reload'  %>
      <% if current_user %>
        <%= javascript_include_tag 'cable', 'data-turbolinks-track': 'reload' %>
    <% end %>
  </header>
  <body class="<%= controller_name %> <%= action_name %>"
    <% if @neighbourhood %>
      data-room_id="<%= @neighbourhood.uuid %>">
    <% else %>
      data-room_id="false"
    <% end %>
  >
    <%= render 'layouts/top_nav' %>
    <%= render 'alerts/alerts_feed' %>
    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
