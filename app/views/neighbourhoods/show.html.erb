<section class="dashboard-show">

 <div class="jumbotron">
  <%if !@events.empty? %>
   <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @events.each_with_index do |event, n| %>
        <li data-target="#myCarousel" data-slide-to="<%= n %>" class="<%='active' if n == 0%>"></li>
      <% end %>
    </ol>

    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag @events.first.image, alt: @events.first.title, class: "d-block img-fluid" %>
            <div class="carousel-caption">
                <h3><%= @events.first.title%></h3>
                <p><%= "Location: #{@events.first.date}" %></p>
                <p><%= "Location: #{@events.first.location}" %></p>
                <a class="btn btn-default">Details</a>
            </div>
        </div>
      <% @events.drop(1).each do |event| %>
        <div class="item">
          <%= image_tag event.image, alt: event.title, class: "d-block img-fluid" %>
            <div class="carousel-caption">
              <h3><%= event.title%></h3>
              <p><%= "Location: #{event.date}" %></p>
              <p><%= "Location: #{event.location}" %></p>
              <a class="btn btn-default">Details</a>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>

    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
</div>

  <div class="dashboard-feeds">
    <div id="feeds">
      <% @feeds.each do |feed| %>
        <%= render 'feed', feed: feed %>
      <% end %>
    </div>
    <%= paginate @feeds %>
  </div>
  

    <div class="dashboard-polls">
      <% @polls.each do |poll| %>
        <%= render 'poll', neighbourhood_id: @neighbourhood.id, poll: poll %>
      <% end %>
    </div>

</section>
