<div id="dashboard-feeds" class="list-group">
  <% @feeds.each do |feed| %>
    <%= render 'feed', feed: feed %>
  <% end %>
</div>

<div id="dashboard-polls" class="list-group">
  <% @polls.each do |poll| %>
    <%= render 'poll', poll: poll %>
  <% end %>
</div>

<div class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @events.each_with_index do |event, n| %>
      <li data-target="#carouselEventIndicators" data-slide-to="<%= n %>" class="<%='active' if n == 0%>"></li>
    <% end %>    
  </ol>

  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag @events.first.image, alt: @events.first.title, class: "d-block img-fluid" %>
      <div class="carousel-caption d-none d-md-block">
        <h3><%= @events.first.title%></h3>
        <p><%= @events.first.date%></p>
        <p><%= @events.first.location%></p>
      </div>
    </div>
    <% @events.drop(1).each do |event| %>
      <div class="carousel-item">
        <%= image_tag event.image, alt: event.title, class: "d-block img-fluid" %>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselEventIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselEventIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>