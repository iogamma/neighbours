 <section class="dashboard-show"> 
 
   <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @events.each_with_index do |event, n| %>
        <li data-target="#myCarousel" data-slide-to="<%= n %>" class="<%='active' if n == 0%>"></li>
      <% end %>    
    </ol>

    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag @events.first.image, alt: @events.first.title, class: "d-block img-fluid" %>
        <div class="carousel-caption d-none d-md-block"></div>
      </div>
      <% @events.drop(1).each do |event| %>
        <div class="item">
          <%= image_tag event.image, alt: event.title, class: "d-block img-fluid" %>
        </div>
      <% end %>
    </div>

    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>

  <div id="dashboard-feeds" class="list-group">
    <% @feeds.each do |feed| %>
      <%= render 'feed', feed: feed %>
    <% end %>
  </div>

  <div id="dashboard-polls" class="list-group">
    <% @polls.each do |poll| %>
      <%= render 'poll', poll: poll %>
    <% end %>
  </div>

</section>