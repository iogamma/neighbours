<% if flash.alert %>
  <div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>The following errors prevented saving:</strong>
    <% alert.each do |error| %>
      <%= error %>
    <% end %>
  </div>
<% end %>
<% if flash[:success] %>
  <div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:success] %>
  </div>
<% end %>

<section class="notices-show">
  <header class="page-header">
    <h2><%= @notice.title %></h2>
    <small>
      <em>
      submitted on date <%= @notice.created_at %> by <%= @notice.user_id %>
      </em>
    </small>
    <% if current_user %>
      <% if @notice.user_id == current_user.id  %>
        <%= link_to fa_icon('trash'), [@neighbourhood, :notice], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    <% end %>
  </header>
  <article class="notice-detail">
    Date of Notice: <%= @notice.date  %>
    <%= @notice.description %>
  </article>
</section>