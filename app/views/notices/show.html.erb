<% if flash.alert %>
  <div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>The following errors prevented saving:</strong>
    <% alert.each do |error| %>
      <%= error %>
    <% end %>
  </div>
<% end %>
<% if flash[:success] %>
  <div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:success] %>
  </div>
<% end %>

<section class="notices-show">
  <header class="page-header">
    <h2 class="notice-title"><%= @notice.title %></h2>
    <h6>Submitted <%= time_ago_in_words(@notice.created_at) %> ago by <%= find_user(@notice.user_id).first_name %> <%= find_user(@notice.user_id).last_name %></h6>
    <% if current_user %>
      <% if @notice.user_id == current_user.id  %>
        <%= link_to fa_icon('trash'), [@neighbourhood, :notice], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    <% end %>
  </header>
  <article class="notice-detail">
    Date of Notice: <%= @notice.date  %>
    <%= @notice.description %>
  </article>
</section>