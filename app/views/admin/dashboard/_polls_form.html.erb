  <div class="row">
    <div class="col-sm-12 poll-column">
      <div class="panel panel-default poll-header">
        <div class="panel-body">
          Create a Poll
        </div>
      </div>
      <%= form_tag admin_create_poll_path, remote: true, name:"pollform", class: "form-horizontal" do %>
        <div class="form-group">
          <label for="Question" class="col-sm-2 control-label">Question</label>
          <div class="col-sm-10">
            <%= text_field_tag :title, nil, id: "Question", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label for="Question" class="col-sm-2 control-label">Details</label>
          <div class="col-sm-10">
            <%= text_area_tag :description, nil, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= submit_tag "Create Poll", class: "btn btn-primary btn-block btn-poll" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>