<section class="assistances-index">
  <header class="page-header">
    <div class="panel panel-default">
      <div class="panel-body">
        Assistances
      </div>
    </div>
    <% if flash[:error] %>
      <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>The following errors prevented saving:</strong>
        <% flash[:error].each do |err| %>
          <li><%= err %></li>
        <% end %>
      </div>
    <% end %>
    <% if flash[:success] %>
      <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:success] %>
      </div>
    <% end %>
  </header>
  <% if current_user %>
    <div class="well" id="accordion" role="tablist" aria-multiselectable="true">
      <a role="button" class="btn btn-info" data-toggle="collapse" href="#new_assistance">
        <i class="fa fa-plus" aria-hidden="true"></i>
        &nbsp;Create New Help Request
      </a>
      <div id="new_assistance" class="collapse" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <%= render 'form' %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="assistances">
    <%= render @assistances %>
    <%= paginate @assistances %>
  </div>

</section>